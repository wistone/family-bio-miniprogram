/* 阅读页样式 - 水墨风格 */
.reading-container {
  height: 100vh;
  position: relative;
  background: linear-gradient(135deg, #f8f4e6 0%, #ede4d3 50%, #e6dcc7 100%);
}

/* 内容滚动区域 */
.content-scroll {
  height: 100vh;
  padding: 20rpx;
}

/* 章节容器 */
.chapters-container {
  padding-bottom: 200rpx; /* 为浮动按钮留出空间 */
}

/* 章节项目 */
.chapter-item {
  margin-bottom: 60rpx;
  padding: 50rpx 40rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 8rpx 32rpx rgba(139, 115, 85, 0.15);
  border: 1rpx solid rgba(139, 115, 85, 0.2);
}

/* 章节头部 */
.chapter-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.chapter-number {
  font-size: 24rpx;
  color: #8b7355;
  margin-bottom: 16rpx;
  opacity: 0.8;
}

.chapter-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #2c3e35;
  margin-bottom: 30rpx;
  text-shadow: 1px 1px 2px rgba(139, 115, 85, 0.1);
}

/* 章节内容 */
.chapter-content {
  position: relative;
}

.chapter-text {
  font-size: 32rpx;
  line-height: 1.8;
  color: #2c3e35;
  text-indent: 2em;
  text-align: justify;
  white-space: pre-wrap;
  word-wrap: break-word;
}

/* 章节分隔器 */
.chapter-separator {
  text-align: center;
  margin: 80rpx 0;
}

.separator-decoration {
  display: flex;
  justify-content: center;
  align-items: center;
}

.separator-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #c0a16b;
  margin: 0 16rpx;
  opacity: 0.6;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #8b7355;
  opacity: 0.8;
}

/* 结束指示器 */
.reading-end {
  text-align: center;
  padding: 80rpx 0;
}

.end-decoration {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.end-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #8b7355;
  margin-bottom: 20rpx;
}

.end-seal {
  font-size: 48rpx;
}

/* 浮动导航按钮 */
.floating-nav {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 100;
}

.nav-button {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: linear-gradient(145deg, #c0a16b, #8b7355);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(139, 115, 85, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.nav-button:active {
  transform: scale(0.95);
}

.nav-button.disabled {
  opacity: 0.4;
  background: #ccc;
}

.nav-icon {
  font-size: 32rpx;
  color: white;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  margin-bottom: 4rpx;
}

.nav-text {
  font-size: 20rpx;
  color: white;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
}

/* 章节指示器 */
.chapter-indicator {
  width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: rgba(139, 115, 85, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.3);
}

.indicator-text {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
}

/* 章节选择弹窗 */
.chapter-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s ease;
}

.chapter-popup.show {
  opacity: 1;
  pointer-events: all;
}

.popup-content {
  width: 80%;
  max-width: 600rpx;
  max-height: 80%;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background: linear-gradient(90deg, #8b7355, #c0a16b);
  color: white;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
}

.popup-close {
  font-size: 40rpx;
  cursor: pointer;
}

.popup-list {
  max-height: 800rpx;
}

.popup-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.popup-item:active {
  background: #f8f4e6;
}

.popup-item.active {
  background: #f8f4e6;
  color: #8b7355;
}

.popup-item-number {
  font-size: 24rpx;
  color: #8b7355;
  margin-right: 20rpx;
  min-width: 100rpx;
}

.popup-item-title {
  font-size: 28rpx;
  flex: 1;
}

/* 响应式调整 */
@media screen and (max-width: 750rpx) {
  .chapter-title {
    font-size: 40rpx;
  }
  
  .chapter-text {
    font-size: 30rpx;
  }
  
  .floating-nav {
    bottom: 30rpx;
    right: 30rpx;
  }
  
  .nav-button {
    width: 90rpx;
    height: 90rpx;
  }
}
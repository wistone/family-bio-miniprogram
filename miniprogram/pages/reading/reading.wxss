

/* 阅读页样式 - 水墨风格 */
.reading-container {
  height: 100vh;
  width: 100%;
  position: relative;
  background: linear-gradient(135deg, #f8f4e6 0%, #ede4d3 50%, #e6dcc7 100%);
}

/* 内容滚动区域 */
.content-scroll {
  height: 100vh;
  width: 100%;
  padding: 0;
  box-sizing: border-box;
}

/* 章节容器 */
.chapters-container {
  padding: 30rpx 30rpx 80rpx 30rpx; /* 增加左右和顶部padding */
  box-sizing: border-box;
  width: 100%;
  max-width: 100vw;
}

/* 当第一个章节是cover时，移除顶部padding */
.chapters-container .chapter-item.cover-chapter:first-child {
  margin: 0; /* 清除所有margin */
  padding: 0; /* 清除所有padding */
  width: 100vw; /* 占满视口宽度 */
  position: relative;
  left: 0; /* 修复定位，确保居中 */
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 章节项目 */
.chapter-item {
  margin-bottom: 60rpx;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 8rpx 32rpx rgba(139, 115, 85, 0.15);
  border: 1rpx solid rgba(139, 115, 85, 0.2);
  box-sizing: border-box;
  width: 100%;
  max-width: 100%;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

/* 最后一个章节减少下边距 */
.chapter-item:last-child {
  margin-bottom: 20rpx;
}

/* Cover章节特殊样式覆盖 */
.chapter-item.cover-chapter {
  margin-bottom: 0;
  padding: 0; /* 去掉所有padding，让cover-content完全控制布局 */
  border-radius: 0;
  background: transparent;
  box-shadow: none;
  border: none;
}

/* 章节头部 */
.chapter-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.chapter-number {
  font-size: 24rpx;
  color: #8b7355;
  margin-bottom: 24rpx; /* 增加与标题的间距 */
  margin-top: 24rpx; /* 增加与标题的间距 */
  opacity: 0.8;
}

.chapter-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #2c3e35;
  margin-bottom: 30rpx;
  text-shadow: 1px 1px 2px rgba(139, 115, 85, 0.1);
  font-family: "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "serif";
  letter-spacing: 2rpx;
}

/* 章节内容 */
.chapter-content {
  position: relative;
}

.chapter-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #2c3e35;
  text-align: justify;
  white-space: pre-wrap;
  word-wrap: break-word;
  overflow-wrap: break-word;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  font-family: "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "serif";
  font-weight: 400;
  letter-spacing: 1rpx;
}

/* 段落样式 - 每个段落都有首行缩进 */
.paragraph {
  text-indent: 2em;
  margin-bottom: 1em;
  white-space: pre-wrap;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.paragraph:last-child {
  margin-bottom: 0;
}

/* 书法风格增强选项 */
.chapter-text.calligraphy-style {
  font-weight: 200;
  letter-spacing: 3rpx;
  word-spacing: 6rpx;
  text-shadow: 
    0.5px 0.5px 1px rgba(139, 115, 85, 0.2),
    1px 1px 2px rgba(139, 115, 85, 0.1);
}

/* 章节分隔器 */
.chapter-separator {
  text-align: center;
  margin: 50rpx 0; /* 减少上下间距 */
}

.separator-decoration {
  display: flex;
  justify-content: center;
  align-items: center;
}

.separator-dot {
  width: 8rpx; /* 缩小点的大小 */
  height: 8rpx;
  border-radius: 50%;
  background: #8b7355; /* 调整颜色使其更素雅 */
  margin: 0 12rpx; /* 减少点之间的间距 */
  opacity: 0.5; /* 降低透明度 */
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #8b7355;
  opacity: 0.8;
}

/* 结束指示器 */
.reading-end {
  text-align: center;
  padding: 10rpx 0 100rpx 0; /* 减少顶部padding，从80rpx减少到0rpx */
}

.end-decoration {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.end-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #8b7355;
  margin-bottom: 20rpx;
}

.end-seal {
  font-size: 48rpx;
}

/* 浮动导航按钮 */
.floating-nav {
  position: fixed;
  bottom: 140rpx; /* 增加底部距离，避免被TabBar遮挡 */
  right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 100;
}

.nav-button {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: linear-gradient(145deg,rgb(160, 138, 112, 0.6), #8b7355);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(139, 115, 85, 0.3); 
  border: 2rpx solid rgba(255, 255, 255, 0.3); 
  transition: all 0.3s ease;
}

.nav-button:active {
  transform: scale(0.95);
}

.nav-button.disabled {
  opacity: 0.4;
  background: #ccc;
}

.nav-icon {
  font-size: 32rpx;
  color: white;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2); 
  margin-bottom: 4rpx;
}

.nav-text {
  font-size: 20rpx;
  color: white;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0); 
}

/* 章节指示器 */
.chapter-indicator {
  min-width: 120rpx;
  max-width: 160rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: rgba(160, 138, 112, 0.6); 
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.3); 
  padding: 0 16rpx;
  box-sizing: border-box;
}

.indicator-text {
  font-size: 22rpx;
  color: white;
  font-weight: bold;
  white-space: nowrap;
}

/* 章节选择弹窗 */
.chapter-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s ease;
}

.chapter-popup.show {
  opacity: 1;
  pointer-events: all;
}

.popup-content {
  width: 80%;
  max-width: 600rpx;
  max-height: 80%;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background: linear-gradient(90deg, #8b7355, #c0a16b);
  color: white;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
}

.popup-close {
  font-size: 40rpx;
  cursor: pointer;
}

.popup-list {
  max-height: 800rpx;
}

.popup-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.popup-item:active {
  background: #f8f4e6;
}

.popup-item.active {
  background: #f8f4e6;
  color: #8b7355;
}

.popup-item-number {
  font-size: 24rpx;
  color: #8b7355;
  margin-right: 20rpx;
  min-width: 100rpx;
}

.popup-item-title {
  font-size: 28rpx;
  flex: 1;
}

/* 响应式调整 */
@media screen and (max-width: 750rpx) {
  .chapters-container {
    padding: 30rpx 30rpx 200rpx 30rpx; /* 增加左右和顶部padding */
  }
  
  /* 小屏幕下的cover页面处理 */
  .chapters-container .chapter-item.cover-chapter:first-child {
    margin: 0; /* 清除所有margin */
    padding: 0; /* 清除所有padding */
    width: 100vw; /* 占满视口宽度 */
    position: relative;
    left: 0; /* 修复定位，确保居中 */
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .chapter-item {
    padding: 25rpx 15rpx;
  }
  
  .chapter-title {
    font-size: 36rpx;
    font-family: "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "serif";
    letter-spacing: 2rpx;
  }
  
  .chapter-text {
    font-size: 28rpx;
    font-family: "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "serif";
    font-weight: 400;
    letter-spacing: 1rpx;
  }
  
  .paragraph {
    text-indent: 1.5em;
  }
  
  /* 小屏幕下也减少结束指示器的顶部间距 */
  .reading-end {
    padding: 0rpx 0 60rpx 0;
  }
  
  .floating-nav {
    bottom: 120rpx;
    right: 15rpx;
  }
  
  .nav-button {
    width: 80rpx;
    height: 80rpx;
  }
  
  .nav-icon {
    font-size: 28rpx;
  }
  
  .nav-text {
    font-size: 18rpx;
  }
}

/* Cover页面样式 */
.cover-chapter {
  background: linear-gradient(135deg, #f8f4e6 0%, #ede4d3 50%, #e6dcc7 100%);
  min-height: 100vh; /* 最小高度占满视口 */
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-bottom: 0;
  box-sizing: border-box;
}

.cover-content {
  width: 100%;
  min-height: 100vh; /* 占满视口高度 */
  padding: 80rpx 60rpx; /* 增加padding确保视觉平衡 */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: transparent; /* 去掉白色浮层，与背景融为一体 */
}

.cover-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #2c3e35;
  margin-bottom: 40rpx;
  font-family: "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "serif";
  text-shadow: 2px 2px 4px rgba(139, 115, 85, 0.2);
  letter-spacing: 4rpx;
}

.cover-title-decoration {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
}

.decoration-line {
  width: 80rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #8b7355, transparent);
}

.decoration-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #8b7355;
  margin: 0 20rpx;
}

.cover-subtitle-section {
  margin-bottom: 80rpx;
}

.cover-subtitle-text {
  font-size: 28rpx;
  color: #5d4e37;
  line-height: 1.8;
  margin-bottom: 16rpx;
  font-family: "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "serif";
  opacity: 0.9;
  text-indent: 0; /* 确保没有首行缩进 */
  text-align: center; /* 确保文本居中 */
}

.cover-button-section {
  margin-bottom: 60rpx;
}

.start-reading-button {
  background: linear-gradient(145deg, #8b7355, #c0a16b);
  border: none;
  border-radius: 50rpx;
  padding: 0;
  width: 300rpx;
  height: 80rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(139, 115, 85, 0.3);
  transition: all 0.3s ease;
}

.start-reading-button::after {
  display: none;
}

.start-reading-button:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.4);
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.button-text {
  margin-right: 16rpx;
  font-family: "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "serif";
}

.button-icon {
  font-size: 28rpx;
}

.cover-decoration {
  display: flex;
  justify-content: center;
}

.ink-seal {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  border: 4rpx solid #8b7355;
  border-radius: 8rpx;
  background: rgba(139, 115, 85, 0.1);
  transform: rotate(3deg);
}

.seal-text {
  font-size: 24rpx;
  color: #8b7355;
  font-weight: bold;
  line-height: 1.2;
}

/* 响应式调整 - Cover页面 */
@media screen and (max-width: 750rpx) {
  .cover-title {
    font-size: 48rpx;
    letter-spacing: 3rpx;
  }
  
  .cover-subtitle-text {
    font-size: 26rpx;
  }
  
  .cover-content {
    padding: 60rpx 40rpx; /* 小屏幕下稍微减少padding */
  }
  
  .start-reading-button {
    width: 260rpx;
    height: 70rpx;
    font-size: 28rpx;
  }
  
  .button-text {
    margin-right: 12rpx;
  }
  
  .button-icon {
    font-size: 24rpx;
  }
}
/* 目录页样式 - 水墨风格 */
.catalog-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f4e6 0%, #ede4d3 50%, #e6dcc7 100%);
  padding: 20rpx;
}

/* 页面头部 */
.catalog-header {
  text-align: center;
  padding: 40rpx 20rpx 60rpx;
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e35;
  margin-bottom: 16rpx;
  text-shadow: 2px 2px 4px rgba(139, 115, 85, 0.2);
  font-family: "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "serif";
}

.header-subtitle {
  font-size: 28rpx;
  color: #8b7355;
  opacity: 0.8;
  margin-bottom: 40rpx;
}

/* 目录滚动区域 */
.catalog-scroll {
  height: calc(100vh - 200rpx);
}

/* 目录列表 */
.catalog-list {
  padding-bottom: 40rpx;
}

/* 目录项目 */
.catalog-item {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 6rpx 24rpx rgba(139, 115, 85, 0.12);
  border: 1rpx solid rgba(139, 115, 85, 0.15);
  transition: all 0.3s ease;
}

.catalog-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.15);
}

/* 章节编号 */
.item-number {
  margin-right: 30rpx;
}

.number-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(145deg, #c0a16b, #8b7355);
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.3);
}

/* 章节内容 */
.item-content {
  flex: 1;
  min-width: 0; /* 确保文本能够换行 */
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e35;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.item-preview {
  font-size: 26rpx;
  color: #5a6c57;
  line-height: 1.5;
  margin-bottom: 16rpx;
  opacity: 0.8;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #8b7355;
  opacity: 0.7;
}

.meta-length {
  margin-right: 20rpx;
}

.meta-time {
  margin-left: 20rpx;
  position: relative;
}

.meta-time::before {
  content: '·';
  position: absolute;
  left: -15rpx;
  color: #c0a16b;
}

/* 箭头指示器 */
.item-arrow {
  margin-left: 20rpx;
}

.arrow-icon {
  font-size: 32rpx;
  color: #c0a16b;
  opacity: 0.6;
  transition: all 0.3s ease;
}

.catalog-item:active .arrow-icon {
  opacity: 1;
  transform: translateX(6rpx);
}

/* 底部信息 */
.catalog-footer {
  text-align: center;
  padding: 60rpx 20rpx 40rpx;
  margin-top: 40rpx;
}

.footer-text {
  font-size: 28rpx;
  color: #8b7355;
  opacity: 0.7;
  margin-bottom: 30rpx;
}

.footer-decoration {
  display: flex;
  justify-content: center;
}

.decoration-flower {
  font-size: 36rpx;
  opacity: 0.6;
}

/* 响应式调整 */
@media screen and (max-width: 750rpx) {
  .header-title {
    font-size: 44rpx;
  }
  
  .item-title {
    font-size: 30rpx;
  }
  
  .item-preview {
    font-size: 24rpx;
  }
  
  .number-circle {
    width: 70rpx;
    height: 70rpx;
    font-size: 26rpx;
  }
}
/* 反馈页样式 - 水墨风格 */
.feedback-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f4e6 0%, #ede4d3 50%, #e6dcc7 100%);
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 页面头部 */
.feedback-header {
  text-align: center;
  padding: 40rpx 20rpx 0rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e35;
  margin-bottom: 16rpx;
  text-shadow: 2px 2px 4px rgba(139, 115, 85, 0.2);
  font-family: "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "serif";
}

.header-subtitle {
  font-size: 28rpx;
  color: #8b7355;
  opacity: 0.8;
  margin-bottom: 30rpx;
}

/* 点赞区域 */
.like-section {
  margin-bottom: 20rpx;
  padding: 30rpx 40rpx; 
  text-align: center;
  border-radius: 20rpx;
}

.like-content {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.like-icon-wrapper {
  position: relative;
  margin-right: 30rpx;
  cursor: pointer;
}

.like-icon {
  font-size: 80rpx;
  transition: all 0.3s ease;
  user-select: none;
}

.like-icon.liked {
  animation: heartBeat 0.6s ease-in-out;
}

.like-animation {
  position: absolute;
  top: -20rpx;
  right: -10rpx;
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
  opacity: 0;
  transform: translateY(0);
  transition: all 0.6s ease;
}

.like-animation.show {
  opacity: 1;
  transform: translateY(-40rpx);
}

@keyframes heartBeat {
  0% { transform: scale(1); }
  20% { transform: scale(1.3); }
  40% { transform: scale(1.1); }
  60% { transform: scale(1.25); }
  80% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

.like-info {
  text-align: left;
}

.like-count {
  font-size: 48rpx;
  font-weight: bold;
  color: #c0a16b;
  line-height: 1;
}

.like-count.loading {
  opacity: 0.6;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 1; }
}

.like-text {
  font-size: 28rpx;
  color: #8b7355;
  opacity: 0.8;
  margin-top: 8rpx;
}

.like-description {
  font-size: 26rpx;
  color: #8b7355;
  opacity: 0.7;
  line-height: 1.5;
}

/* 身份选择弹窗 */
.identity-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.identity-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #f8f4e6;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.identity-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e35;
}

.modal-close {
  font-size: 48rpx;
  color: #8b7355;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.identity-options {
  margin-bottom: 30rpx;
}

.identity-option {
  width: 100%;
  padding: 30rpx 40rpx;
  background: rgba(255, 255, 255, 0.6);
  border: 2rpx solid rgba(139, 115, 85, 0.2);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.identity-option.active {
  background: rgba(192, 161, 107, 0.2);
  border-color: #c0a16b;
  box-shadow: 0 4rpx 12rpx rgba(192, 161, 107, 0.3);
}

.option-icon {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.option-text {
  font-size: 28rpx;
  color: #2c3e35;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.option-desc {
  font-size: 24rpx;
  color: #8b7355;
  opacity: 0.8;
}

.identity-option.active .option-text {
  color: #8b7355;
}

/* 自定义昵称输入框 */
.custom-nickname-input {
  margin-bottom: 30rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  padding: 0 30rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(139, 115, 85, 0.2);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2c3e35;
  box-sizing: border-box;
}

.nickname-input::placeholder {
  color: #8b7355;
  opacity: 0.5;
}

.modal-actions {
  margin-top: 20rpx;
}

.confirm-button {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(145deg, #c0a16b, #8b7355);
  color: white;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  box-shadow: 
    0 4px 15px rgba(139, 115, 85, 0.3),
    inset 0 1px 3px rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  border: none;
}

.confirm-button:active {
  transform: translateY(2px);
  box-shadow: 
    0 2px 8px rgba(139, 115, 85, 0.3),
    inset 0 1px 3px rgba(255, 255, 255, 0.2);
}

.confirm-button:disabled {
  background: linear-gradient(145deg, #d0d0d0, #a0a0a0);
  color: #666;
  box-shadow: 
    0 2px 8px rgba(160, 160, 160, 0.2),
    inset 0 1px 3px rgba(255, 255, 255, 0.1);
}

/* 点赞记录区域 */
.likes-section {
  margin-top: 20rpx;
}

.likes-header {
  padding: 20rpx 10rpx 20rpx;
}

.likes-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e35;
}

/* 点赞记录列表 - 紧凑横排 */
.likes-container {
  padding: 20rpx 30rpx;
  border-radius: 16rpx;
}

.like-record {
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(139, 115, 85, 0.1);
}

.like-record:last-child {
  border-bottom: none;
}

.like-record-text {
  font-size: 26rpx;
  line-height: 1.4;
  color: #2c3e35;
}

.nickname {
  font-weight: bold;
  color: #8b7355;
  margin-right: 8rpx;
}

.action {
  color: #2c3e35;
  margin-right: 8rpx;
}

.time {
  color: #8b7355;
  opacity: 0.7;
  font-size: 24rpx;
}

/* 空状态 */
.empty-likes {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 60rpx;
  opacity: 0.3;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #8b7355;
  opacity: 0.7;
}

/* 加载状态 */
.loading-likes {
  text-align: center;
  padding: 60rpx 40rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #8b7355;
  opacity: 0.7;
}

/* 响应式调整 */
@media screen and (max-width: 750rpx) {
  .header-title {
    font-size: 44rpx;
  }
  
  .like-icon {
    font-size: 70rpx;
  }
  
  .like-count {
    font-size: 42rpx;
  }
  
  .modal-content {
    padding: 30rpx;
  }
  
  .modal-title {
    font-size: 30rpx;
  }
  
  .identity-option {
    padding: 25rpx 30rpx;
  }
  
  .option-icon {
    font-size: 30rpx;
  }
  
  .option-text {
    font-size: 26rpx;
  }
  
  .option-desc {
    font-size: 22rpx;
  }
  
  .nickname-input {
    height: 70rpx;
    font-size: 26rpx;
    padding: 0 25rpx;
  }
  
  .confirm-button {
    height: 70rpx;
    font-size: 30rpx;
  }
  
  .likes-container {
    padding: 15rpx 20rpx;
  }
  
  .like-record-text {
    font-size: 24rpx;
  }
  
  .time {
    font-size: 22rpx;
  }
}
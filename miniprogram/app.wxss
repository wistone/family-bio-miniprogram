/* 全局样式 - 水墨风格 */
page {
  background: linear-gradient(135deg, #f8f4e6 0%, #ede4d3 50%, #e6dcc7 100%);
  font-family: "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "serif";
  color: #2c3e35;
}

/* 水墨纸张质感 */
.ink-paper {
  background: 
    radial-gradient(circle at 20% 50%, transparent 20%, rgba(139, 115, 85, 0.03) 21%, rgba(139, 115, 85, 0.03) 34%, transparent 35%, transparent),
    linear-gradient(0deg, rgba(139, 115, 85, 0.02) 50%, transparent 50%);
  background-size: 75px 50px, 20px 20px;
}

/* 水墨按钮样式 */
.ink-button {
  background: linear-gradient(145deg, #c0a16b, #8b7355);
  color: white;
  border: 2px solid rgba(139, 115, 85, 0.3);
  border-radius: 25px;
  box-shadow: 
    0 4px 15px rgba(139, 115, 85, 0.3),
    inset 0 1px 3px rgba(255, 255, 255, 0.2);
  font-size: 16px;
  font-weight: bold;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.ink-button:active {
  transform: translateY(2px);
  box-shadow: 
    0 2px 8px rgba(139, 115, 85, 0.3),
    inset 0 1px 3px rgba(255, 255, 255, 0.2);
}

/* 标题样式 */
.ink-title {
  color: #2c3e35;
  text-shadow: 2px 2px 4px rgba(139, 115, 85, 0.2);
  font-weight: bold;
}

/* 内容容器 */
.content-container {
  background: rgba(255, 255, 255, 0.85);
  border: 1px solid rgba(139, 115, 85, 0.2);
  border-radius: 15rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 115, 85, 0.15);
}

/* 文本样式 */
.ink-text {
  line-height: 1.8;
  color: #2c3e35;
  text-indent: 2em;
}

/* 分隔线 */
.ink-divider {
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(139, 115, 85, 0.3), transparent);
  margin: 20rpx 0; /* 从30rpx减少到20rpx，让分割线更紧凑 */
}
